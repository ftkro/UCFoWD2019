- var LabNo=5
block vars
doctype
html(lang="en")
    head
        meta(charset="utf-8")
        link(rel="stylesheet" href="yoga.min.css")
        title #{title_header}
    body
        div#wrapper
            header
                h1 #{title}
            nav
                ul
                    li: a(href="index.html") Home
                    li: a(href="classes.html") Classes
                    li: a(href="schedule.html") Schedule
                    li: a(href="contact.html") Contact
            main
                case sub
                    when "Find Your Inner Light"
                        img(src="../Common/img/yogadoor2.jpg" alt="Yoga door" width="225" height="300" class="floatleft")
                h2 #{sub}
                case sub
                    when "Yoga Classes"
                        div#mathero
                    when "Yoga Schedule"
                        div#loungehero
                block content
                br
            footer
                p Copyright &copy; Path of Light Yoga Studio
                p This page was created by Takuro Fukuda for IT2040, Spring 2019, Lab#{LabNo}
